{
  "name": "@verbytes-tenlixor/sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Tenlixor localization platform with Angular, Vue, and React support",
  "author": "Verbytes <support@verbytes.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbesli/Tenlixor.git",
    "directory": "sdk/typescript"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc --module esnext --outDir dist/esm",
    "build:watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./angular": {
      "import": "./dist/adapters/angular.pipe.js",
      "require": "./dist/adapters/angular.pipe.js",
      "types": "./dist/adapters/angular.pipe.d.ts"
    },
    "./vue": {
      "import": "./dist/adapters/vue.plugin.js",
      "require": "./dist/adapters/vue.plugin.js",
      "types": "./dist/adapters/vue.plugin.d.ts"
    },
    "./react": {
      "import": "./dist/adapters/react.hook.js",
      "require": "./dist/adapters/react.hook.js",
      "types": "./dist/adapters/react.hook.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tenlixor",
    "localization",
    "i18n",
    "translation",
    "internationalization",
    "l10n",
    "typescript",
    "angular",
    "vue",
    "react",
    "sdk"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbesli/Tenlixor/issues"
  },
  "homepage": "https://tenlixor.verbytes.com",
  "peerDependencies": {
    "@angular/common": ">=12.0.0",
    "@angular/core": ">=12.0.0",
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": true
    },
    "@angular/common": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@angular/common": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "typescript": "^5.9.3",
    "vue": "^3.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
